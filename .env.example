# Database Configuration
POSTGRES_USER=nesuser
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_MIN_16_CHARS
# Generate strong password: python -c "import secrets; print(secrets.token_urlsafe(32))"
POSTGRES_DB=nepal_entity_db
POSTGRES_PORT=5432

DATABASE_URL=postgresql://nesuser:YOUR_STRONG_PASSWORD@postgres:5432/nepal_entity_db

# Server Configuration
HOST=0.0.0.0
PORT=8195
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=GENERATE_A_SECURE_SECRET_KEY_HERE
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REQUIRE_AUTHENTICATION=false

# CORS Configuration (comma-separated list)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
# Production example:
# CORS_ORIGINS=["https://yourapp.com","https://www.yourapp.com"]

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRY=3600

